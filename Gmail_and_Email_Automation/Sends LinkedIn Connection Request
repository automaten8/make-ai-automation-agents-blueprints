Describe what this code is doing in 3-5 words:

const main = async () => {
  const url = input.linkedinUrl;

  // Go to the LinkedIn profile
  await page.goto(url, { waitUntil: 'networkidle2' });

  // Optional: Take a debug screenshot
  await page.screenshot({ path: '/tmp/debug_screenshot.png' });

  let connectClicked = false;

  try {
    // Wait for the Connect or Invite button
    await page.waitForSelector('button[aria-label*="Connect"], button[aria-label="Invite"]', {
      visible: true,
      timeout: 5000
    });

    // Click the Connect or Invite button
    await page.click('button[aria-label*="Connect"], button[aria-label="Invite"]');
    connectClicked = true;

    // Optional: Wait and take another screenshot after clicking
    await page.waitForTimeout(1000);
    await page.screenshot({ path: '/tmp/after_click.png' });

    return {
      success: true,
      message: ✅ Connection request sent successfully to ${url},
      url: url
    };
  } catch (err) {
    return {
      success: false,
      message: ❌ Failed to click Connect/Invite button at ${url},
      error: err.toString()
    };
  }
};

await main();
